<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import msjfxuicomponents.uicomponents.MSCategorizer?>

<BorderPane styleClass="lightBlueFond" stylesheets="@../../CSS/GeneralPurposes.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mssmfactory.KafylElYatim.MVC.Controllers.Appareillage.AffectationAppareillageController">
   <center>
      <HBox alignment="CENTER" prefWidth="350.0" spacing="10.0">
         <children>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Icons/appareillage.png" />
               </image>
            </ImageView>
            <MSCategorizer fx:id="appareillages" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <JFXButton maxWidth="1.7976931348623157E308" onAction="#confirm" prefHeight="50.0" styleClass="lightBlueButton" text="Confirmer" HBox.hgrow="ALWAYS" />
            <JFXButton maxWidth="1.7976931348623157E308" onAction="#cancel" prefHeight="50.0" styleClass="lightRedButton" text="Annuler" HBox.hgrow="ALWAYS" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Affectation d'appareillage" />
         </children>
         <styleClass>
            <String fx:value="blueFond" />
            <String fx:value="borderedText" />
            <String fx:value="wellFormattedBlueText" />
         </styleClass>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
